#!/bin/sh
THEDIR=$1
if [ "${THEDIR}" = "" ]; then
   THEDIR="rundir"
fi

## ======================================================================
## Paths
## ======================================================================
MAINPATH=${NEMODIR}             # path of NEMO trunk
SAZDIR=/Users/vichi/WORKS/SCIENCE/BFM_NEMO/SAZ1D


## ======================================================================
## =======  Nothing to be changed below this line  =====================
## ======================================================================

mkdir ${THEDIR}
cd ${THEDIR}
## ======================================================================
## file needed for the run
## ======================================================================
cp ../namelist_ref . 
cp ../*.xml            .
cp ../namelist_cfg     .
cp ../opa         .

## ======================================================================
## Climatology of temperature and chlorophyll
## ======================================================================

## ======================================================================
## initial data and Atmospherical forcings
## ======================================================================
ln -s ${SAZDIR}/*.nc .

time ./opa






